<h1>会員情報編集</h1>

 <%= form_with(model: @customer, url: admin_customer_path(@customer), method: :patch) do |form| %>
    <div class="form-group">
      <%= form.label :last_name, "Last Name", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :last_name, class: "form-control" %>
      </div>

      <%= form.label :first_name, "First Name", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :first_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :last_name_kana, "Last Name (Kana)", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :last_name_kana, class: "form-control" %>
      </div>

      <%= form.label :first_name_kana, "First Name (Kana)", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :first_name_kana, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :email, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.email_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :postal_code, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :postal_code, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :address, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :address, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :telephone_number, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :telephone_number, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= form.submit 'Update', class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>