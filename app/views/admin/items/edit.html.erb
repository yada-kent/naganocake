<h1>編集画面</h1>

<div class="container">
  <%= form_with model: @item, url: admin_item_path, method: :patch do |form| %>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :introduction %>
          <%= form.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :price %>
          <%= form.number_field :price, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :image %>
          <%= form.file_field :image, class: "form-control-file" %>
        </div>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-md-6">
        <%= form.submit 'Update', class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
