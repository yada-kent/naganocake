<h2>新規会員登録</h2>
<head>
  <style>
    .align-middle td,
    .align-middle th {
      vertical-align: middle;
    }
  </style>
</head>

<table class="table table-borderless">
  <tbody>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <tr class="align-middle">
        <th>フリガナ</th>
        <td>（セイ）</td>
        <td>
          <%= f.text_field :last_name_kana, class: "form-control", placeholder: "セイ", size: "20" %>
        </td>
        <td>（メイ）</td>
        <td>
          <%= f.text_field :first_name_kana, class: "form-control", placeholder: "メイ", size: "20" %>
        </td>
      </tr>

      <tr class="align-middle">
        <th><%= f.label :email, "メールアドレス" %></th>
        <td></td>
        <td>
          <%= f.email_field :email, class: "form-control", placeholder: "example@example.com" %>
        </td>
        <td></td>
        <td></td>
      </tr>

      <tr class="align-middle">
        <th><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></th>
        <td></td>
        <td>
          <%= f.text_field :postal_code, class: "form-control", placeholder: "1234567" %>
        </td>
        <td></td>
        <td></td>
      </tr>

      <tr class="align-middle">
        <th><%= f.label :address, "住所" %></th>
        <td></td>
        <td>
          <%= f.text_field :address, class: "form-control", placeholder: "東京都渋谷区" %>
        </td>
      </tr>

      <tr class="align-middle">
        <th><%= f.label :telephone_number, "電話番号（ハイフンなし）" %></th>
        <td></td>
        <td>
          <%= f.text_field :telephone_number, class: "form-control", placeholder: "0123456789" %>
        </td>
        <td></td>
        <td></td>
      </tr>

      <tr class="align-middle">
        <th><%= f.label :password, "パスワード（6文字以上）" %></th>
        <td></td>
        <td>
          <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
        </td>
        <td></td>
        <td></td>
      </tr>

      <tr class="align-middle">
        <th><%= f.label :password_confirmation, "パスワード（確認用）" %></th>
        <td></td>
        <td>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード確認" %>
        </td>
        <td></td>
        <td></td>
      </tr>

      <tr>
        <td colspan="5" class="text-center">
          <%= f.submit "新規登録", class: "btn btn-lg btn-success" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render "public/shared/links" %>
